# Aliases comunes

# Editor aliases
alias v "nvim"
alias vim "nvim"
alias vi "nvim"

# Quick commands
alias c "clear"

# Network
alias ports "netstat -tulanp"

# File operations
alias cp "cp -i"
alias mv "mv -i"
alias rm "rm -i"
alias mkdir "mkdir -pv"

# Archives
alias tarx "tar -xvf"
alias tarc "tar -cvf"
alias targz "tar -czvf"
